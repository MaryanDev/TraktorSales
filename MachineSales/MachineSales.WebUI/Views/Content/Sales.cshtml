@model List<MachineSales.WebUI.Entities.Machine>
@{
    ViewBag.Title = "Sales";
}
<section id="sales">
    <div class="container">
        @*<div class="well well-sm">
                <strong>Category Title</strong>
                <div class="btn-group">
                    <a href="#" id="list" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-th-list">
                        </span>List
                    </a> <a href="#" id="grid" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-th"></span>Grid
                    </a>
                </div>
            </div>*@

        <div class="row">
            @if(Model.Count == 0 || Model == null)
            {
                <h1>На даний момент техніка на продаж відсутня</h1>
            }
            else
            {
                <div class="row list-group">
                    @foreach (var machine in @Model)
                    {
                        <div class="col-xs-10 col-sm-10 col-md-4 col-lg-4">
                            @Html.Partial("Machine", machine)
                        </div>
                    }
                </div>
            }
        </div>

        @if (ViewBag.allPages > 1)
        {
            <div class="text-center">
                <ul class="pagination pagination-sm">
                    @{ string classSelected = "";}
                    @for (var i = 0; i < ViewBag.allPages; i++)
                    {
                        classSelected = i + 1 == ViewBag.CurrentPage ? "background-color: lightgray" : "";
                        <li><a style="@classSelected" href="@Url.Action("Sales", "Content", new { page = i + 1})">@(i + 1)</a></li>
                    }
                </ul>
            </div>
        }
       
    </div>
</section>